<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Progress</title>
  <link rel="shortcut icon" href="logo1.jpg">
  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/dacf88b734.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
  <link rel="manifest" href="/manifest.json">
<style>
body {
  font-family: "Lato", sans-serif;
}
.sidenav {
      height: 100%;
      width: 0;
      position: fixed;
      z-index: 1;
      top: 0;
      left: -52px;
      background-color: turquoise;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 60px;
    }

    .sidenav a {
      padding: 8px 8px 8px 32px;
      text-decoration: none;
      font-size: 25px;
      color: teal;
      display: block;
      transition: 0.3s;
      margin-left: 30px;
    }
    .nav_img{
          width: 68%;
          position: absolute;
          left: 24%;
          bottom: 20px;
      }
    .sidenav a:hover {
      color: #f1f1f1;
    }
    .logo{
        width: 75%;
        height: 156px;
        margin-left: 55px;
      }
    .sidenav .closebtn {
      position: absolute;
      top: 0;
      right: 25px;
      font-size: 36px;
      margin-left: 50px;
    }
.font-size-29{
      font-size: 29px;
}
.projtitle{
      font-family: cursive;
}
::-webkit-scrollbar{
      width: 0;
    }
    .progress{
      width: 82%;
      margin-left: 8%;
    }
    .move-small{
      margin-left: 5%;
    }
@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
</style>
</head>
<body>

<div class="alert alert-info alert-dismissible fade show" role="alert">
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-sm-2 col-2">
        <div id="mySidenav" class="sidenav">
          <img src="logo2.jpg" class="logo">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/">Home</a>
        <a href="/account">General Settings</a>
        <a href="/account/progress">My Progress</a>
        <a href="/account/taskSettings">Task Settings</a>
        <a href="/signout">Sign Out</a>
        <img src="navigator.svg" class="nav_img">
      </div>
      <span style="font-size:30px;cursor:pointer" class="icon" onclick="openNav()">
      &#9776;</span>
      </div>
      <div class="col-md-10 col-sm-10 col-10">
        <h4 class="alert-heading">Welcome <%= data[0].name %> !!!</h4>
        <p class="bd-lead font-weight-lighter">Customize Your Tasks.</p>
        <hr>
        <p class="mb-0">Whenever you need to, be sure to use margin utilities to keep things nice and tidy.</p>
      </div>
  </div>
</div>
</div>

<div class="row">
  <div class="col-md-4 col-sm-4 col-1"></div>
  <div class="col-md-4 col-sm-4 col-10">
    <h4 class="font-weight-light lead projtitle font-size-29">My Progress</h4>
  </div>
  <div class="col-md-4 col-sm-4 col-1"></div>
</div><br>

  <div class="row">
  <div class="col-md-5 col-sm-5 col-10">
    <figure class="figure">
      <img src="work_progress.svg" class="figure-img img-fluid rounded" style="width: 82%;
      margin-left: 8%;">
    </figure>
       <!--  <img src="work_progress.svg" class="progress"> -->
  </div>
  <div class="col-md-4 col-sm-4 col-10 move-small">
  <div class="form-group">
    <label for="exampleInputNumber1" class="lead">Number Of Completed Tasks</label>
    <input type="number" class="form-control" id="exampleInputNumber1"  readonly  
    placeholder=<%- JSON.stringify(data[0].completed_tasks) %>>
  </div>
  <div class="form-group">
    <label for="exampleInputNumber2" class="lead">Number Of Deleted Tasks</label>
    <input type="number" class="form-control" id="exampleInputNumber2" readonly
    placeholder=<%- JSON.stringify(data[0].deleted_tasks) %>>
  </div>
  </div>
  <div class="col-md-3 col-sm-3 col-1"></div>
</div>



<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<script>

var user_data = <%- JSON.stringify(data) %>;

function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
}

function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
}

if('serviceWorker' in navigator){
  navigator.serviceWorker.register('/sw.js')
}
</script>

</body>
</html>